<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/px30"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_info_dot"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/px10"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/icon_info_line2"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px90"
                android:layout_marginLeft="@dimen/px50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <TextView
                        android:id="@+id/manufacturer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="制造商"
                        android:textSize="@dimen/px30"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/list_item_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/time_bg_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px90"
                android:layout_marginLeft="@dimen/px50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_info_company"/>
                    <TextView
                        android:id="@+id/company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="广州优游文化传播有限公司"
                        android:textSize="@dimen/px30"
                        android:layout_marginLeft="@dimen/px20"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/list_item_color"
                        android:layout_centerVertical="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/time_bg_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px90"
                android:layout_marginLeft="@dimen/px50">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_info_phone_after"/>
                    <TextView
                        android:id="@+id/selling_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123545457484"
                        android:textSize="@dimen/px30"
                        android:layout_marginLeft="@dimen/px20"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/list_item_color"
                        android:layout_centerVertical="true" />
                    <TextView
                        android:id="@+id/after_phone_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   (售后电话)"
                        android:textSize="@dimen/px30"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/list_item_color"
                        android:layout_centerVertical="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/time_bg_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px90"
                android:layout_marginLeft="@dimen/px50">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_info_phone_fix"/>
                    <TextView
                        android:id="@+id/repair_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123545457484"
                        android:textSize="@dimen/px30"
                        android:layout_marginLeft="@dimen/px20"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/list_item_color"
                        android:layout_centerVertical="true" />
                    <TextView
                        android:id="@+id/repair_phone_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   (报修电话)"
                        android:textSize="@dimen/px30"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/list_item_color"
                        android:layout_centerVertical="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/time_bg_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px90"
                android:layout_marginLeft="@dimen/px50">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_info_address"/>
                    <TextView
                        android:id="@+id/manufacturer_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="广州番禺大石街道新兴广场8栋307"
                        android:textSize="@dimen/px30"
                        android:layout_marginLeft="@dimen/px20"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/list_item_color"
                        android:layout_centerVertical="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/time_bg_color"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>