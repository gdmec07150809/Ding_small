<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_fix_cancel"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textColor="@color/title_color"
            android:layout_centerInParent="true"
            android:textSize="34px"
            android:text="维修信息 (必填)"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/hui_rule"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:layout_centerVertical="true"
                android:textColor="@color/title_color"
                android:text="报修人"/>
            <EditText
                android:id="@+id/repair_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:hint="请填写报修人姓名"
                android:background="@null"
                android:textSize="30px"
                android:textColor="@color/title_color"
                android:textColorHint="@color/time_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/hui_rule"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:layout_centerVertical="true"
                android:textColor="@color/title_color"
                android:text="报修电话"/>
            <EditText
                android:id="@+id/repair_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:hint="请填写报修人电话"
                android:textSize="30px"
                android:background="@null"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/title_color"
                android:textColorHint="@color/time_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/hui_rule"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/new_select_layout"
            android:layout_width="match_parent"
            android:layout_height="100px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:layout_centerVertical="true"
                android:textColor="@color/title_color"
                android:text="报修地址"/>
            <TextView
                android:id="@+id/adress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_toLeftOf="@+id/location_img"
                android:layout_centerVertical="true"
                android:hint="未选择"
                android:background="@null"
                android:textColor="@color/title_color"
                android:textColorHint="@color/time_color"/>
            <ImageView
                android:id="@+id/location_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/new_come"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/hui_rule"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>