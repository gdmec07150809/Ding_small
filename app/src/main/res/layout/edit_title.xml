<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

            <RelativeLayout
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="8pt"
                    android:textColor="@color/blank"
                    android:text="编辑标题"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ge"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/head">
                <LinearLayout
                    android:id="@+id/middle"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg_gray"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/received"
                        android:layout_width="35dp"
                        android:layout_height="24dp"
                        android:background="@drawable/bg_green"
                        android:textColor="@color/green"
                        android:layout_gravity="center"
                        android:textSize="6pt"
                        android:text="已收"></Button>
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/hui"/>
                    <Button
                        android:layout_width="35dp"
                        android:layout_height="24dp"
                        android:background="@null"
                        android:textColor="@color/blank"
                        android:layout_gravity="center"
                        android:textSize="6pt"
                        android:text="已付"></Button>
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/hui"/>
                    <Button
                        android:layout_width="35dp"
                        android:layout_height="24dp"
                        android:background="@null"
                        android:textColor="@color/blank"
                        android:layout_gravity="center"
                        android:textSize="6pt"
                        android:text="待收"></Button>
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/hui"/>
                    <Button
                        android:id="@+id/payable"
                        android:layout_width="35dp"
                        android:layout_height="24dp"
                        android:background="@null"
                        android:textColor="@color/blank"
                        android:layout_gravity="center"
                        android:textSize="6pt"
                        android:text="待付"></Button>
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/hui"/>
                    <Button
                        android:id="@+id/notepad"
                        android:layout_width="35dp"
                        android:layout_height="24dp"
                        android:background="@null"
                        android:textColor="@color/blank"
                        android:layout_gravity="center"
                        android:textSize="6pt"
                        android:text="记事"></Button>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="9pt"
                    android:layout_marginRight="30dp"
                    android:text="√"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hui"
                    android:layout_alignParentBottom="true"></LinearLayout>
            </RelativeLayout>

        <ListView
            android:id="@+id/title_list"
            android:layout_below="@+id/ge"
            android:layout_above="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
<RelativeLayout
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true">
    <TextView
        android:id="@+id/add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="7pt"
        android:textColor="@color/green"
        android:text="+ 添加标题"/>
</RelativeLayout>
</RelativeLayout>