<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="#ffffff">
                <LinearLayout
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_common_back_col"/>
                    <TextView
                        android:id="@+id/back_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1CD39B"
                        android:layout_marginLeft="26px"
                        android:layout_gravity="center_vertical"
                        android:text="返回"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/edit_password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#333333"
                    android:textSize="38px"
                    android:text="修改密码"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#E8E8E8"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/head2"
                android:layout_width="match_parent"
                android:layout_height="444px"

                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_below="@+id/head"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginLeft="60px">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="旧密码"
                            android:layout_weight="1"
                            android:textSize="30px"
                            android:layout_gravity="center_vertical"
                            android:textColor="#333333"
                            android:id="@+id/old_password_text" />

                        <EditText
                            android:id="@+id/password1"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:textColor="#333333"
                            android:hint="请输入原登录密码"
                            android:textColorHint="#9F9F9F"
                            android:textSize="26px"
                            android:background="@null"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="#E8E8E8"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginLeft="60px">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/new_password_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="新密码"
                            android:layout_weight="1"
                            android:textSize="30px"
                            android:layout_gravity="center_vertical"
                            android:textColor="#333333"/>

                        <EditText
                            android:id="@+id/c_password"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:textColor="#333333"
                            android:hint="请输入登录密码"
                            android:background="@null"
                            android:textSize="26px"
                            android:textColorHint="#9F9F9F"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="#E8E8E8"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginLeft="60px">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/confirm_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="再确认"
                            android:layout_weight="1"
                            android:textSize="30px"
                            android:layout_gravity="center_vertical"
                            android:textColor="#333333"/>
                        <EditText
                            android:id="@+id/c_new_password"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:textColor="#333333"
                            android:hint="请再次输入新密码"
                            android:textColorHint="#9F9F9F"
                            android:textSize="26px"
                            android:background="@null"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="#E8E8E8"/>
                </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30px"
                        android:background="@drawable/btn_theme">
                        <TextView
                            android:id="@+id/edit_password"
                            android:layout_width="600px"
                            android:layout_height="84px"
                            android:background="@null"
                            android:text="保存修改"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="32px"/>
                    </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>