<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/big_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="8pt"
            android:textColor="@color/blank"
            android:text="上门维修"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/head_buttom"
        android:layout_below="@+id/head"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="35dp">
        <LinearLayout
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_green"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/received_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:background="@drawable/bg_gray"
                android:textColor="@color/green"
                android:layout_gravity="center"
                android:textSize="6pt"
                android:text="已收付"></Button>
            <Button
                android:id="@+id/yet_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:background="@drawable/bg_gray"
                android:textColor="@color/green"
                android:layout_gravity="center"
                android:textSize="6pt"
                android:text="待收付"></Button>
            <Button
                android:id="@+id/all_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:background="@color/green"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="6pt"
                android:text="全部"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/middle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_green"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:background="@color/green"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="6pt"
                android:text="个人"></Button>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:background="@drawable/bg_gray"
                android:textColor="@color/green"
                android:layout_gravity="center"
                android:textSize="6pt"
                android:text="公司"></Button>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_below="@+id/head_buttom"
        android:layout_height="30dp"
        android:background="@color/green">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/qizi"/>
        <TextView
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="6pt"
            android:layout_centerInParent="true"
            android:text="2017年10月"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/center"
            android:src="@drawable/return_img"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/center"
            android:src="@drawable/come"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/sort"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/date"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <RelativeLayout
                android:id="@+id/date_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="时间排序"
                    android:textColor="@color/orange"
                    android:textSize="6pt"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/time"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/up_jiantou"/>

                    <ImageView
                        android:id="@+id/date_down"
                        android:layout_width="15dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/or_butoom_jiaotou"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@color/hui"/>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@color/hui"/>

            <RelativeLayout
                android:id="@+id/money_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="金额排序"
                    android:textSize="6pt"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/money"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/up_jiantou"/>

                    <ImageView
                        android:id="@+id/money_down"
                        android:layout_width="15dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/butoom_jiantou"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hui"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/collect"
                android:layout_marginRight="10dp"
                android:text="共3条"/>
            <TextView
                android:id="@+id/collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/paid"
                android:layout_marginRight="10dp"
                android:text="待收 2300"/>
            <TextView
                android:id="@+id/paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="待付800"/>
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/acount_income_item_detail_list"
        android:layout_below="@+id/sort"
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include layout="@layout/accountbook_analysis_footer"/>
    </LinearLayout>
</RelativeLayout>