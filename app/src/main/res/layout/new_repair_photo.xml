<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px90">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_fix_cancel"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px30"/>
        <TextView
            android:id="@+id/update_photo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_color"
            android:layout_centerInParent="true"
            android:textSize="@dimen/px34"
            android:text="上传图片 (选填)"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/hui_rule"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:layout_marginTop="@dimen/px10"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/found_history_ryt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.example.administrator.ding_small.HelpTool.FlowLayout
                android:id="@+id/found_activity_fyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.example.administrator.ding_small.HelpTool.FlowLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>