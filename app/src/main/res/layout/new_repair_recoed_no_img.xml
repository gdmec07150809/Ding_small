<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/px30"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_info_dot"/>
                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/px10"
                    android:layout_gravity="center_horizontal"
                    android:layerType="software"
                    android:background="@drawable/bg_dotted_line_shu"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px180"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px90"
                android:layout_marginLeft="@dimen/px50">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <TextView
                        android:id="@+id/repair_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="维修员："
                        android:textSize="@dimen/px28"
                        android:layout_centerVertical="true"
                        android:textColor="#A2A2A2"/>
                    <TextView
                        android:id="@+id/repair_name"
                        android:layout_toRightOf="@id/repair_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="陈维修"
                        android:textSize="@dimen/px28"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:textColor="#A2A2A2"/>
                    <TextView
                        android:id="@+id/repqir_record_time"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017.01.01"
                        android:textSize="@dimen/px30"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:textColor="#C8C8C8"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/time_bg_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px90"
                android:layout_marginLeft="@dimen/px50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <TextView
                        android:id="@+id/repair_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="iPad屏幕碎了"
                        android:textSize="@dimen/px28"
                        android:layout_marginLeft="@dimen/px20"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/title_color"
                        android:layout_centerVertical="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/time_bg_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/pic_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px50">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/time_bg_color"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>