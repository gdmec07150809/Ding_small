<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100">
            <TextView
                android:id="@+id/custom_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px30"
                android:layout_centerVertical="true"
                android:textColor="@color/title_color"
                android:text="自定义名称"/>
            <EditText
                android:id="@+id/repair_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/icon_equiplist_boxdelete"
                android:hint="酒吧灯箱"
                android:background="@null"
                android:textSize="@dimen/px30"
                android:layout_marginRight="@dimen/px20"
                android:textColor="@color/title_color"
                android:textColorHint="@color/time_color"/>
            <ImageView
                android:id="@+id/icon_equiplist_boxdelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_equiplist_boxdelete"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/hui_rule"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100">
            <TextView
                android:id="@+id/selling_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px30"
                android:layout_centerVertical="true"
                android:textColor="@color/title_color"
                android:text="售点名称"/>
            <EditText
                android:id="@+id/selling_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:hint="点击输入"
                android:background="@null"
                android:textSize="@dimen/px30"
                android:textColor="@color/title_color"
                android:textColorHint="@color/time_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/hui_rule"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100">
            <TextView
                android:id="@+id/selling_location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px30"
                android:layout_centerVertical="true"
                android:textColor="@color/title_color"
                android:text="售点地址"/>
            <EditText
                android:id="@+id/selling_location_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:hint="点击输入"
                android:background="@null"
                android:textSize="@dimen/px30"
                android:textColor="@color/title_color"
                android:textColorHint="@color/time_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/hui_rule"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100">
            <TextView
                android:id="@+id/selling_user_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px30"
                android:layout_centerVertical="true"
                android:textColor="@color/title_color"
                android:text="售点联系人"/>
            <EditText
                android:id="@+id/selling_user_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:hint="点击输入"
                android:background="@null"
                android:textSize="@dimen/px30"
                android:textColor="@color/title_color"
                android:textColorHint="@color/time_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/hui_rule"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100">
            <TextView
                android:id="@+id/selling_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px30"
                android:layout_centerVertical="true"
                android:textColor="@color/title_color"
                android:text="联系人电话"/>
            <EditText
                android:id="@+id/selling_phone_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:hint="点击输入"
                android:background="@null"
                android:inputType="phone"
                android:maxLength="11"
                android:textSize="@dimen/px30"
                android:textColor="@color/title_color"
                android:textColorHint="@color/time_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/hui_rule"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>