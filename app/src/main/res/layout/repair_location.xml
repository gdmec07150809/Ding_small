<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            style="@style/repair_remarks_LStyle"
            android:text="售点名称"/>

        <EditText
            style="@style/device_detail_RStyle"
            android:background="@null"
            android:hint="请输入售点名称"
            android:textColorHint="@color/hui"
          />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/hui"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            style="@style/repair_remarks_LStyle"
            android:text="售点编号"
            android:textSize="6pt"/>

        <EditText
            style="@style/device_detail_RStyle"
            android:textColorHint="@color/hui"
            android:background="@null"
            android:hint="请输入售点编号"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:background="@color/hui"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            style="@style/repair_remarks_LStyle"
            android:text="售点地址"/>

        <EditText
            style="@style/device_detail_RStyle"
            android:textColorHint="@color/hui"
            android:background="@null"
            android:hint="请输入售点地址"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:background="@color/hui"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            style="@style/repair_remarks_LStyle"
            android:text="售点联系人"/>
        <EditText
            style="@style/device_detail_RStyle"
            android:textColorHint="@color/hui"
            android:background="@null"
            android:hint="请输入售点联系人"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/hui"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            style="@style/repair_remarks_LStyle"
            android:text="联系人号码"/>
        <EditText
            style="@style/device_detail_RStyle"
            android:textColorHint="@color/hui"
            android:background="@null"
            android:hint="请输入联系人号码"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/hui"/>
    </RelativeLayout>
</LinearLayout>