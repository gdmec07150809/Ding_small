<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.weavey.loading.lib.LoadingLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/type"
        android:layout_above="@+id/footer"
        app:isFirstVisible="true"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100">

            <LinearLayout
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px30"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_common_back_col"/>

                <TextView
                    android:id="@+id/back_text"
                    style="@style/back_style"
                    android:layout_gravity="center_vertical"
                    android:text="返回"/>
            </LinearLayout>

            <TextView
                android:id="@+id/register_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册页面"
                android:textColor="@color/title_color"
                android:textSize="@dimen/px34"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/email" />

            <LinearLayout
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px30"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/email_text"
                    style="@style/back_style"
                    android:text="邮箱注册"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px20"
            android:background="@drawable/hui_shadow"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px554"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px50"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px110"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phone_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:text="手机号"
                    android:textColor="#333333"
                    android:textSize="@dimen/px30"/>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px50"
                    android:layout_weight="6"
                    android:background="@null"
                    android:hint="请输入注册手机号"
                    android:inputType="phone"
                    android:textColor="#333333"
                    android:maxLength="11"
                    android:textColorHint="#BBBBBB"
                    android:textSize="@dimen/px30"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hui_rule"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px110"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/code_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:text="验证码"
                    android:textColor="#333333"
                    android:textSize="@dimen/px30"/>

                <EditText
                    android:id="@+id/p_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px50"
                    android:layout_weight="4"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:textColor="#333333"
                    android:textColorHint="#BBBBBB"
                    android:textSize="@dimen/px30"/>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="@dimen/px30"
                    android:layout_gravity="center_vertical"
                    android:background="@color/hui_rule"/>

                <RelativeLayout
                    android:id="@+id/send"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/send_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="马上获取"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/px30"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hui_rule"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px110"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nickname_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:text="昵称"
                    android:textColor="#333333"
                    android:textSize="@dimen/px30"/>

                <EditText
                    android:id="@+id/memName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px50"
                    android:layout_weight="6"
                    android:background="@null"
                    android:hint="请输入用户昵称"
                    android:textColor="#333333"
                    android:textColorHint="#BBBBBB"
                    android:textSize="@dimen/px30"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hui_rule"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px110"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/password_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:text="密码"
                    android:textColor="#333333"
                    android:textSize="@dimen/px30"/>

                <EditText
                    android:id="@+id/password1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px50"
                    android:layout_weight="6"
                    android:inputType="numberPassword"
                    android:background="@null"
                    android:maxLength="12"
                    android:hint="请输入密码"
                    android:textColor="#333333"
                    android:textColorHint="#BBBBBB"
                    android:textSize="@dimen/px30"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hui_rule"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px110"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/confirm_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:text="确认"
                    android:textColor="#333333"
                    android:textSize="@dimen/px30"/>

                <EditText
                    android:id="@+id/c_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px50"
                    android:layout_weight="6"
                    android:background="@null"
                    android:hint="请再次输入密码"
                    android:textColor="#333333"
                    android:inputType="numberPassword"
                    android:textColorHint="#BBBBBB"
                    android:textSize="@dimen/px30"/>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="@dimen/px30"
                    android:layout_gravity="center_vertical"
                    android:background="@color/hui_rule"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/hui_rule"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px30"
            android:background="@drawable/btn_theme">
            <Button
                android:id="@+id/next"
                android:layout_width="@dimen/px600"
                android:layout_height="@dimen/px84"
                android:background="@null"
                android:text="完成注册并登陆"
                android:textColor="@color/white"
                android:textSize="@dimen/px32"/>
        </LinearLayout>
    </LinearLayout>
   </com.weavey.loading.lib.LoadingLayout>
</LinearLayout>