<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="8pt"
                android:textColor="@color/blank"
                android:text="联系人列表"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ge"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/head">
        <LinearLayout
            android:id="@+id/middle"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_green"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <Button
                android:layout_width="50dp"
                android:layout_height="23dp"
                android:background="@color/green"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="6pt"
                android:text="个人"></Button>
            <Button
                android:layout_width="50dp"
                android:layout_height="23dp"
                android:background="@color/white"
                android:textColor="@color/green"
                android:layout_gravity="center"
                android:textSize="6pt"
                android:text="公司"></Button>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/middle"
            android:src="@drawable/left"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="24dp"

            android:layout_toRightOf="@+id/middle"
            android:layout_centerVertical="true"
            android:src="@drawable/right"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/add_contacts"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:id="@+id/hui"
        android:layout_below="@+id/ge"
        android:background="@color/green"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/hui"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/bg">

            <EditText
                android:id="@+id/search_edittext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="联系人姓名/公司/电话"
                android:paddingLeft="5dp"
                android:textColorHint="@color/hui"
                android:textSize="5pt" />

            <ImageView
                android:id="@+id/clean_text"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.1"
                android:src="@drawable/clean" />
        </LinearLayout>

        <Button
            android:id="@+id/search_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="0.2"
            android:background="@drawable/btn_green"
            android:text="查询"
            android:textSize="6pt"
            android:textColor="@color/white"></Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/search"
        android:background="@color/hui"
        android:orientation="horizontal"></LinearLayout>
    <ListView
        android:id="@+id/contacts_list"
        android:layout_width="match_parent"
        android:layout_below="@+id/search_bottom"
        android:layout_above="@+id/footer"
        android:divider="@null"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <include layout="@layout/footer"/>
    </LinearLayout>
</RelativeLayout>