<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30px"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_info_dot"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10px"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/icon_info_line2"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginLeft="50px">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <TextView
                        android:id="@+id/repair_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="维修员："
                        android:textSize="28px"
                        android:layout_centerVertical="true"
                        android:textColor="#A2A2A2"/>
                    <TextView
                        android:layout_toRightOf="@id/repair_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="陈维修"
                        android:textSize="28px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:textColor="#A2A2A2"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017.01.01"
                        android:textSize="30px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:textColor="#C8C8C8"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/time_bg_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginLeft="50px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="iPad屏幕碎了"
                        android:textSize="28px"
                        android:layout_marginLeft="20px"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/title_color"
                        android:layout_centerVertical="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/time_bg_color"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190px"
                android:layout_marginLeft="50px">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="180px"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/device_head_img"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="180px"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/device_head_img"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="180px"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/device_head_img"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/time_bg_color"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>