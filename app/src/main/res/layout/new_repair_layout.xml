<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/repair_information_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <include layout="@layout/repair_information"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/new_repair_photo_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <include layout="@layout/new_repair_photo"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/new_repair_remarks_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <include layout="@layout/new_repair_remarks"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="@color/hui_rule"/>
        <LinearLayout
            android:id="@+id/new_information_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/new_information_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/icon_fix_info_active"/>
            <TextView
                android:id="@+id/information_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/theme_color"
                android:text="信息"/>
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/new_information_layout"
            android:id="@+id/new_photo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/new_photo_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/icon_fix_img_normal"/>
            <TextView
                android:id="@+id/photo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/time_color"
                android:text="图片"/>
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/new_photo_layout"
            android:id="@+id/new_remarks_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/new_remarks_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/icon_fix_remark_normal"/>
            <TextView
                android:id="@+id/remarks_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/time_color"
                android:text="备注"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/confrim_btn"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/theme_color">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="确定"
                android:gravity="center"
                android:textSize="30px"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>