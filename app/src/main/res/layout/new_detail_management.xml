<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px90">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POC"
                android:textSize="@dimen/px30"
                android:textColor="@color/list_item_color"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/poc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/px30"
                android:textColor="@color/list_item_color"
                android:text="164262164216"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/time_bg_color"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px90">
            <TextView
                android:id="@+id/company_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司名"
                android:textSize="@dimen/px30"
                android:textColor="@color/list_item_color"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/px30"
                android:textColor="@color/list_item_color"
                android:text="重庆分公司"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/time_bg_color"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px90">
            <TextView
                android:id="@+id/deptName_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="部门"
                android:textSize="@dimen/px30"
                android:textColor="@color/list_item_color"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/deptName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/px30"
                android:textColor="@color/list_item_color"
                android:text="广州番禺"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/time_bg_color"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px90">
            <TextView
                android:id="@+id/managementPhone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理联系人电话"
                android:textSize="@dimen/px30"
                android:textColor="@color/list_item_color"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/managementPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/px30"
                android:textColor="@color/list_item_color"
                android:text="132565467848"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/time_bg_color"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px90">
            <TextView
                android:id="@+id/managementName_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理联系人名称"
                android:textSize="@dimen/px30"
                android:textColor="@color/list_item_color"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/managementName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/px30"
                android:textColor="@color/list_item_color"
                android:text="陈小姐"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/time_bg_color"/>
    </LinearLayout>
</LinearLayout>