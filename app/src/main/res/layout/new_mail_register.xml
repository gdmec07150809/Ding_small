<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_common_back_col"/>

            <TextView
                android:id="@+id/back_text"
                style="@style/back_style"
                android:layout_gravity="center_vertical"
                android:text="返回"/>
        </LinearLayout>

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="邮箱注册"
            android:textColor="@color/title_color"
            android:textSize="@dimen/px34"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px30"
        android:background="@drawable/hui_shadow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px444"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px30"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px110"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="邮箱号"
                android:textColor="#333333"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:hint="请输入注册邮箱号"
                android:textSize="@dimen/px30"
                android:textColorHint="#BBBBBB"
                android:textColor="#333333"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="25dp"
                android:layout_gravity="center_vertical"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/hui_rule"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px110"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/code_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="验证码"
                android:textColor="#333333"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/px30"/>
            <EditText
                android:id="@+id/p_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="请输入验证码"
                android:textSize="@dimen/px30"
                android:textColorHint="#BBBBBB"
                android:textColor="#333333"
                android:inputType="number"
                android:layout_marginLeft="25dp"
                android:layout_gravity="center_vertical"
                android:background="@null"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="@dimen/px30"
                android:layout_gravity="center_vertical"
                android:background="@color/hui_rule"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:id="@+id/send">
                <TextView
                    android:id="@+id/send_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_color"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/px30"
                    android:text="马上获取"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/hui_rule"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px110"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pass_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:text="密码"
                android:textColor="#333333"
                android:textSize="@dimen/px30"/>

            <EditText
                android:id="@+id/password1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px50"
                android:layout_weight="6"
                android:background="@null"
                android:inputType="numberPassword"
                android:hint="请输入密码"
                android:maxLength="12"
                android:textColor="#333333"
                android:textColorHint="#BBBBBB"
                android:textSize="@dimen/px30"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/hui_rule"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px110"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pass2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.5"
                android:text="确认"
                android:textColor="#333333"
                android:textSize="@dimen/px30"/>

            <EditText
                android:id="@+id/c_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px50"
                android:layout_weight="6"
                android:background="@null"
                android:inputType="numberPassword"
                android:hint="请再次输入密码"
                android:textColor="#333333"
                android:textColorHint="#BBBBBB"
                android:textSize="@dimen/px30"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/hui_rule"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px30"
        android:background="@drawable/btn_theme">
        <TextView
            android:id="@+id/next"
            android:layout_width="@dimen/px600"
            android:layout_height="@dimen/px84"
            android:background="@null"
            android:text="完成注册"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"/>
    </LinearLayout>
</LinearLayout>