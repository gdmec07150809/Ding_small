<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px300"
        android:layout_margin="@dimen/px50"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px50"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <EditText
                android:id="@+id/newPhone_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/title_color"
                android:textSize="@dimen/px30"
                android:hint="请输入新手机号"
                android:textColorHint="@color/time_color"
                android:maxLength="11"
                android:inputType="phone"
                android:background="@null"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/px10"
                android:layout_marginBottom="@dimen/px20"
                android:background="@color/theme_color"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px30"
                android:background="@drawable/btn_theme">
                <Button
                    android:id="@+id/new_login"
                    android:layout_width="@dimen/px200"
                    android:layout_height="@dimen/px60"
                    android:background="@null"
                    android:text="绑定"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px32"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>