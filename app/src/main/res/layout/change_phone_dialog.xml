<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px400"
        android:layout_margin="@dimen/px50"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/px30"
            android:orientation="vertical"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px90"
                android:layout_marginTop="@dimen/px40"
                android:layout_marginLeft="@dimen/px50"
                android:layout_marginRight="@dimen/px50"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/newPhone_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/px30"
                    android:hint="请输入新手机号"
                    android:layout_centerVertical="true"
                    android:textColorHint="@color/time_color"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:background="@null"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/px10"
                    android:background="@color/theme_color"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px90"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/p_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px50"
                    android:layout_weight="4"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:textColor="#333333"
                    android:textColorHint="#BBBBBB"
                    android:textSize="@dimen/px30"/>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="@dimen/px30"
                    android:layout_gravity="center_vertical"
                    android:background="@color/hui_rule"/>

                <RelativeLayout
                    android:id="@+id/send"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/send_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="马上获取"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/px30"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/px10"
                android:layout_marginBottom="@dimen/px20"
                android:layout_marginLeft="@dimen/px60"
                android:layout_marginRight="@dimen/px60"
                android:background="@color/theme_color"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px30"
                android:background="@drawable/btn_theme">
                <Button
                    android:id="@+id/new_login"
                    android:layout_width="@dimen/px200"
                    android:layout_height="@dimen/px60"
                    android:background="@null"
                    android:text="绑定"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px32"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>